<%= form_for [@book, Comment.new], remote: true, :html => { :class => "form-stacked" } do |f| %>

  <fieldset>

    <div class="clearfix">
      <label>Name:</label>
      <div class="input">
        <%= f.text_field :name, class: 'xlarge' %>
      </div>
    </div>

    <div class="clearfix">
      <label>Message:</label>
      <div class="input">
        <%= f.text_area :content, class: 'xxlarge', rows: 5 %>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag "Submit", class: 'btn primary' %>
    </div>

  </fieldset>
<% end %>
