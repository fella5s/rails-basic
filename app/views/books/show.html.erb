<h1><%= @book.title %></h1>

<div class="row">
  <div class="span5">
    <%= image_tag(@book.cover_url, class: 'cover-image') %>
  </div>
  <div class="span11">
    <div id="reservation-status">
      <%= render partial: "reservation_status", locals: {reservation: @book_reservation, user: current_user} %>
    </div>

    <p>by <%= @book.authors %></p>

    <div id="rating-status">
      <%= render "ratings/rating", book: @book %>
    </div>

    <p>ISBN: <%= @book.isbn %></p>
    <p><%= @book.description %></p>

    <div id="rating-links">
      <%= render "ratings/links", book: @book, user: current_user %>
    </div>

    <span id="reservation-links">
      <%= render partial: "reservation_links", locals: {book: @book, reservation: @book_reservation} %>
    </span>
    
    
    <%= link_to "Edit", edit_book_path(@book), class: 'btn' %>
    <%= link_to "Delete", book_path, method: :delete, class: 'btn danger' %>

    <div style="margin-top: 20px;" id="comment-errors"></div>

    <div id="comment-form">
      <%= render partial: "comments/form" %>
    </div>

    <div id="comments">
      <%= render partial: "book_comments" %>
    </div>
  </div>
</div>
