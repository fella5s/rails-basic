<h1><%= @book.title %></h1>

<% if @book_reservation %>
  <span class="label important">Reserved by <%= @book_reservation.email %></span>
<% else %>
  <span class="label success">Free</span>
<% end %>

<p>by <%= @book.authors %></p>
<p>ISBN: <%= @book.isbn %></p>
<p><%= @book.description %></p>

<% if @book_reservation %>
  <%= link_to "Free", free_book_reservation_path(@book, @book_reservation), method: :put, class: 'btn' %>
<% else %>
  <%= link_to "Reserve", new_book_reservation_path(@book), class: 'btn', remote: true %>
<% end %>

<%= link_to "Edit", edit_book_path(@book), class: 'btn' %>
<%= link_to "Delete", book_path, method: :delete, class: 'btn danger' %>

<div id="reservation-form" style="display: none;">
</div>
