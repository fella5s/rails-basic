  <dl>
  <% @users.each do |user| %>
    <dt><%= user.email %></dt>
    <dd>
      <% if user.is_admin? %>
        Admin
      <% else %>
        <span class="btn-group">
          <a href="#" class="btn">Grant admin rights</a>
          <%= link_to "Delete", user_path(user), method: :delete, class: 'btn btn-danger' %>
        </span>
      <% end %>
    </dd>
    
  <% end %>
  </dl>