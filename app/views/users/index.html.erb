<dl>
<% if @users.size>1 %>
  <% @users.each do |user| %>
    <% if current_user != user %>
      <dt><%= user.email %></dt>
      <dd>
        <span class="btn-group">
          <% if user.is_admin? %>
            <a href="#" class="btn">Remove from admins</a>
          <% else %>
            <a href="#" class="btn">Make admin</a>
          <% end %>
          <%= link_to "Delete", user_path(user), method: :delete, class: 'btn btn-danger' %>
        </span>
      </dd>    
    <% end %>
  <% end %>
<% else %>
  <dt> No other users :( </dt>
<% end %>
</dl>