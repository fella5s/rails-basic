  <dl>
  <% @users.each do |user| %>
    <dt><%= user.email %></dt>
    <dd>
      <% if user.is_admin? %>
        Admin
      <% else %>
        <span class="btn-group">
          <a href="#" class="btn">Grant admin rights</a>
          <a href="#" class="btn btn-danger">Delete</a>
        </span>
      <% end %>
    </dd>
    
  <% end %>
  </dl>